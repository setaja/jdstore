<div class="pull-right">
  <%= link_to("Add a stuff", new_admin_good_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">


  <% @goods.each do |good| %>
  <tr>
    <td>
      <%= render_good_status(good) %>
      <%= link_to(good.title, admin_good_path(good)) %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_good_path(good)) %>
      <%= link_to("Destroy", admin_good_path(good), :method => :delete, :data => { :confirm => "Are you sure?" }) %>

      <% if good.is_hidden %>
      <%= link_to("Publish", publish_admin_good_path(good), :class => "btn btn-xs btn-default") %>
      <% else %>
      <%= link_to("Hide", hide_admin_good_path(good), :class => "btn btn-xs btn-default") %>
      <% end %>
    </td>
    <td>
      <%= good.created_at %>
    </td>
  </tr>
  <% end %>
</table>
